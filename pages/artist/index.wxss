page {
    overflow-x: hidden;
}

#artist_header {
    position: relative;
    height: 540rpx;
    overflow: hidden;
}

#artist_header image {
    width: 100%;
    height: 609rpx;
    position: absolute;
    left: 0;
    top: 0;
}

#ah_wrap {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    z-index: 10;
    height: 50rpx;
    line-height: 50rpx;
    background: linear-gradient(to bottom,rgba(0,0,0,0),rgba(0,0,0,0.1));
}

#ah_wrap image {
    position: absolute;
    left: 16rpx;
    top: 14rpx;
}

#ah_wrap .collect {
    font-size: 20rpx;
    padding-left: 50rpx;
    color: #eaeaea;
}

.tab-item {
    position: relative;
}

.tab-item:after {
    position: absolute;
    right: -1rpx;
    top: 26rpx;
    height: 32rpx;
    width: 2rpx;
    background-color:#dfdfdf;
    content: "";
    overflow: hidden;
}

.tbi-des {
    font-size: 20rpx;
}

.mvs .cover {
    padding-top: 56.2%;
}

.mvs .tl_cnt {
    width: 352.5rpx;
}

.artist_des {
    padding: 5rpx 15rpx;
    font-size: 28rpx;
    color:#999;
    line-height: 1.5;
    display: block;
}

#simiwrap {
    overflow: hidden;
}